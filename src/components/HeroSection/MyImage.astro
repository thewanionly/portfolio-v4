---
import { Image } from 'astro:assets';

import myImage from '@/assets/me.jpg';
import { cn } from '@/lib/utils';

const { class: className } = Astro.props;
---

<div class={cn('rounded-blob-shape w-[55%] min-w-[10rem] aspect-square', className)}>
  <Image
    class="rounded-blob-shape w-full aspect-square object-cover"
    src={myImage}
    alt="Elloani Ross Pitogo wearing beige long sleeve, sling bag, and watch with hands together placed in a table"
    loading="eager"
    decoding="auto"
  />
</div>
