---
import { Icon } from 'astro-icon/components';

interface Skill {
  name: string;
  label: string;
  icon: string;
}

const skills: Skill[] = [
  {
    name: 'html5',
    label: 'HTML5',
    icon: 'html5',
  },
  {
    name: 'css3',
    label: 'CSS3',
    icon: 'css3',
  },
  {
    name: 'javascript',
    label: 'JavaScript',
    icon: 'javascript',
  },
  {
    name: 'typescript',
    label: 'TypeScript',
    icon: 'typescript',
  },
  {
    name: 'react',
    label: 'React',
    icon: 'react',
  },
  {
    name: 'next',
    label: 'Next.js',
    icon: 'nextjs',
  },

  {
    name: 'tailwind',
    label: 'Tailwind',
    icon: 'tailwind',
  },
  {
    name: 'styled-components',
    label: 'Styled Components',
    icon: 'styled-components',
  },
  {
    name: 'sass',
    label: 'Sass',
    icon: 'sass',
  },
];
---

<section id="skills" class="scroll-mt-10 md:scroll-mt-15 lg:scroll-mt-20">
  <div class="section-wrapper py-16">
    <h2
      class="text-4xl md:text-5xl lg:text-6xl text-center md:text-start font-bold mb-10 md:mb-15 lg:mb-20"
    >
      <a href="#skills">Skills</a>
    </h2>
    <div
      class="grid 2xs:grid-cols-3 grid-cols-2 xs:grid-cols-4 sm:grid-cols-5 md:grid-cols-6 gap-x-4 gap-y-10"
    >
      {
        skills.map(({ label, icon }) => (
          <div class="flex flex-col gap-3 items-center ">
            {icon && <Icon name={icon} class="size-10 md:size-12.5" />}
            <span class="text-lg text-center">{label}</span>
          </div>
        ))
      }
    </div>
  </div>
</section>
